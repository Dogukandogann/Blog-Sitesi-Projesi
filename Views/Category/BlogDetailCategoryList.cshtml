@model IEnumerable<EntityLayer.Concrete.Category>
<div class="sidebar-box">
    <h3 class="heading">Categories</h3>
    <ul class="categories">
        @foreach (var item in Model)
        {
            <li><a href="/Blog/BlogByCategory/@item.CategoryId">@item.Name <span></span></a></li>
        }
    </ul>
</div>
